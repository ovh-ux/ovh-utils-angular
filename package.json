{
  "name": "@ovh-ux/ovh-utils-angular",
  "version": "13.0.2",
  "description": "[DEPRECATED] Utils Angular.",
  "license": "BSD-3-Clause",
  "author": "OVH SAS",
  "repository": "ovh-ux/ovh-utils-angular",
  "main": "./dist/ovh-utils-angular.js",
  "scripts": {
    "test": "yarn run lint",
    "lint": "run-p lint:css lint:js",
    "lint:css": "stylelint 'src/**/*.less' --fix",
    "lint:js": "eslint --quiet --fix ./src",
    "version": "npx conventional-changelog-cli -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "postversion": "git push && git push --tags",
    "build": "rollup -c",
    "prepublish": "rollup -c"
  },
  "keywords": [
    "angular",
    "utils"
  ],
  "lint-staged": {
    "*.html": [
      "htmlhint 'packages/**/*.html'"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.less": [
      "stylelint 'src/**/*.less' --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "@ovh-ux/translate-async-loader": "^1.0.4",
    "filesize": "^3.6.1",
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@commitlint/cli": "^7.1.2",
    "@commitlint/config-angular": "^7.1.2",
    "@commitlint/config-conventional": "^7.1.2",
    "@ovh-ux/component-rollup-config": "^1.1.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.6.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-angular": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "htmlhint": "^0.10.0",
    "husky": "^1.1.0",
    "lint-staged": "^7.3.0",
    "npm-run-all": "^4.1.3",
    "stylelint": "^9.6.0",
    "stylelint-config-standard": "^18.2.0"
  },
  "peerDependencies": {
    "angular": "^1.5.0",
    "angular-translate": "^2.18.1",
    "jquery": "^2.1.3"
  }
}
